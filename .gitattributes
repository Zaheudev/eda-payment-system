# Auto detect text files and normalize line endings to LF
* text=auto

# Java files
*.java text eol=lf
*.class binary
*.jar binary
*.war binary

# XML files
*.xml text eol=lf
*.pom text eol=lf

# Properties files
*.properties text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf
/mvnw text eol=lf

# Windows batch
*.cmd text eol=crlf
*.bat text eol=crlf

# Documentation
*.md text eol=lf
README* text eol=lf
LICENSE* text eol=lf

# Docker
Dockerfile text eol=lf
docker-compose.yml text eol=lf
.dockerignore text eol=lf

# Git
.gitattributes text eol=lf
.gitignore text eol=lf

# Images
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg text eol=lf
