{
  "type": "record",
  "name": "PaymentEvent",
  "namespace": "com.zaheudev.shared.avro",
  "fields": [
    {
      "name": "paymentId",
      "type": "string",
      "doc": "UUID-ul unic al tranzacției"
    },
    {
      "name": "amount",
      "type": "com.zaheudev.shared.avro.Amount",
      "doc": "Amount object with currency and value"
    },
    {
      "name": "cardDetails",
      "type": ["null","com.zaheudev.shared.avro.CardDetails"],
      "doc": "This will be removed in the future"
    },
    {
      "name": "tokenRef",
      "type": ["null","string"],
      "doc": "This is the token for the card details"
    },
    {
      "name": "timestamp",
      "type": "long",
      "doc": "Unix timestamp la momentul inițierii"
    },
    {
      "name": "status",
      "type": {
        "type": "enum",
        "name": "PaymentStatus",
        "symbols": ["PENDING", "VALIDATED", "REJECTED", "COMPLETED"]
      }
    }
  ]
}